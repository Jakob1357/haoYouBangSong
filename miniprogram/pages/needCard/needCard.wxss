.select_box{
  width:530rpx;
  height:90%;
  border-radius: 14rpx;
  position: relative;
  background-color: white;
  margin-left: 25rpx;
}
.select_box .select{
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  border-radius: 8rpx;
  border: 1rpx solid silver;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  background-color: white;
}
.select_box .select .select_text{
  font-size: 35rpx;
  color: #000000;
  line-height: 42rpx;
  flex: 1;
}
.select_box .select .select_img{
  width: 30rpx;
  height: 30rpx;
  display: block;
  transition:transform 0.3s;
}
.select_box .select .select_img_rotate{
  transform:rotate(180deg); 
}
.select_box .option_box{
  position: absolute;
  top: calc(100% - 0rpx);
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
  border-left:1px solid #efefef;
  border-right:1px solid #efefef;
  background-color: white;
  display: block;
}
.select_box .option_box .option{
  display: block;
  line-height: 46rpx; 
  font-size:35rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  background-color: white;
}

