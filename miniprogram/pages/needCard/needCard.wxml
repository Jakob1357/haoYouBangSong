<view class='need'>
  <!-- <text class='needtext'>需求</text>
  <!-- <text>\n</text> -->
  <text>\n</text>
  <text>\n</text>
  <view class='card'>
    <form bindsubmit='res'>  
      <view class="section1">    
      <input maxlength="10" name="restaurant" placeholder="请您输入餐厅"     bindinput="getInput"/>  
      </view>
      <text>\n</text>
      <view class="section1">    
      <input maxlength="10" name="needIn" placeholder="请您输入需求信息" bindinput="getInput"/>  
      </view>
      <text>\n</text>
      <view class="section1">    
      <input maxlength="10" name="time" placeholder="请您输入时间区间(如11：30-12：30)" bindinput="getInput"/>  
      </view>
      <text>\n</text>
      <view class="section1">    
      <input maxlength="10" name="phoneNumber" placeholder="请您输入联系方式" bindinput="getInput"/>  
      </view>
      <text>\n</text>
      <view class="section1">    
      <input maxlength="10" name="more" placeholder="请您输入备注"     bindinput="getInput"/>  
      </view>
      <text class='blank1'>nnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnn</text>
      <text class='blank1'>\n</text>
      <view><button class='tapType' form-type='submit' bindtap='onTapToSuccess' >提交</button></view>
      <view class="line"></view>
    </form>
    <view class="square">
     <text class='wenxin-text'>温馨提示：\n</text>
     <text class='text'>1.</text> 
    </view>
  </view>

  <view class='select_box'>
    <view class='select' catchtap='selectTap'>
        <text class='select_text'>{{selectData[index]}}</text>
        <image class='select_img {{selectShow&&"select_img_rotate"}}' src='../../images/xiajiantou.png'  background-size="contain"></image>
    </view>
    <view class='option_box' style='height:{{selectShow?(selectData.length>5?325:selectData.length*50):0}}rpx;'>
        <text class='option' wx:for='{{selectData}}' wx:key='this' data-index='{{index}}' catchtap='optionTap'>{{item}}</text>
    </view>
  </view>
</view>

<button class="front-button1">求助</button>
<button bindtap="skipHelpCard" class="front-button2">填写帮助卡片</button>

