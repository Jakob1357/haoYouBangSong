/* pages/payMoney/payMoney.wxss */
.topStyle {      
  display: flex;      
  flex-direction: column;      
  align-items: center;      
  background: #e8e7e9;       
  width: 100%;     
  height: 100rpx;
}
.topText{
  margin-top: 20rpx;
  font-size: 40rpx;
  font-weight: 700;
  text-align: left;
  color: rgb(90, 87, 87);
}

.item_container {  
  display: flex;  
  flex-direction: row; 
  align-items: center; 
  padding: 20rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
} 
.select_icon { 
  width: 40rpx;  
  height: 40rpx;
} 
.text {  
  margin-left: 30rpx;
  font-size: 35rpx;
}
.text1{
  margin-left: 10rpx;
}
.text2{
  margin-left: 10rpx;
  font-size: 30rpx;
}
.tapType{
  width: 80%;
  margin-top: 100rpx;
  background-color: rgb(47, 165, 62);
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.tapType::after{
  border-radius: 98rpx;
  border: 0;
}

.section1{
  margin-left: 30rpx;
}

.section2{
  width: 90%;
  font-size: 30rpx;
  color: #333333;
  height: 150rpx;
  border: 2rpx solid grey;
  margin-left: 35rpx;
}

.box{
  height: 80rpx;
  font-size: 50rpx;
  word-break: keep-all;
  word-wrap: break-word;
  width: 550rpx;
  margin-left: 100rpx;
  margin-top: 100rpx;
  border-bottom: 1rpx solid silver;
  text-align: center;
}